{
    "firestore": {
        "rules": "firestore.rules",
        "indexes": "firestore.indexes.json"
    },
    "hosting": {
        "public": "docs",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [{
            "source": "**",
            "destination": "/index.html"
        }],
        "headers": [{
            "source": "**",
            "headers": [{
                "key": "Cache-Control",
                "value": "no-cache"
            }]
        }]
    }
}